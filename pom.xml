<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.weirdkid</groupId>
	<artifactId>quaqua-jfc</artifactId>
	<version>23.12-SNAPSHOT</version>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<dependencies>
		<dependency>
			<groupId>com.twelvemonkeys.imageio</groupId>
			<artifactId>imageio-core</artifactId>
			<version>3.5-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.twelvemonkeys.imageio</groupId>
			<artifactId>imageio-metadata</artifactId>
			<version>3.5-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.twelvemonkeys.imageio</groupId>
			<artifactId>imageio-icns</artifactId>
			<version>3.5-SNAPSHOT</version>
		</dependency>
	</dependencies>


	<build>

		<finalName>${project.artifactId}-${project.version}</finalName>

		<resources>
			<resource>
				<directory>${project.basedir}/src/main/java</directory> <!--
				Specify your source directory -->
				<includes>
					<include>**/*.properties</include>
					<include>**/Browser*.png</include>
					<include>**/FileChooser.*.png</include>
					<include>**/FileView.*.png</include>
					<include>**/GroupBox*.png</include>
					<include>**/Tree.*.png</include>
					<include>**/*.txt</include>
				</includes>
				<targetPath>${project.build.directory}/classes</targetPath> <!--
				Specify your target directory -->
			</resource>
		</resources>

		<plugins>

			<!-- compile the code -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.11.0</version> <!-- Use the latest version available -->
				<configuration>
					<source>1.8</source> <!-- newer jdk will not compile because
												lib uses sun.awt packages -->
					<target>1.8</target>
					<!-- limit the compile to the classes identified in the
					original
			     			build.xml for the jfc-only target  -->
					<includes>
						<include>**/QuaquaPantherFileChooserLAF.java</include>
						<include>**/QuaquaLeopardFileChooserLAF.java</include>
						<include>**/Quaqua16LionFileChooserLAF.java</include>
						<include>**/QuaquaMavericksFileChooserLAF.java</include>
						<include>**/QuaquaLookAndFeel.java</include>
						<include>**/QuaquaBrowserUI.java</include>
						<include>**/QuaquaFileChooserBrowserListUI.java</include>
						<include>**/DefaultBrowserCellRenderer.java</include>
						<include>**/QuaquaTreeUI.java</include>
						<include>**/QuaquaPanelUI.java</include>
						<include>**/QuaquaPantherFileChooserUI.java</include>
						<include>**/QuaquaLeopardFileChooserUI.java</include>
						<include>**/QuaquaLionFileChooserUI.java</include>
						<include>**/QuaquaMavericksFileChooserUI.java</include>
						<include>**/QuaquaJaguarFileChooserUI.java</include>
						<include>**/filechooser/*FileSystemView.java</include>
						<include>**/QuaquaIconFactory.java</include>
						<include>**/QuaquaLeopardSideBarSelectionBorder.java</include>
						<include>**/QuaquaLionSideBarSelectionBorder.java</include>
						<include>**/QuaquaNativeButtonBorder.java</include>
						<include>**/QuaquaTextFieldFocusHandler.java</include>
						<include>de/sciss/treetable/**</include>
					</includes>
					<excludes>
						<exclude>**/*15*.java</exclude>
					</excludes>

				</configuration>
			</plugin>

			<!-- Copy the image files into the build output -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>3.3.1</version>
				<executions>
					<execution>
						<phase>process-resources</phase>
						<goals>
							<goal>resources</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<!-- jar the compiled code -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>3.3.0</version> <!-- use the latest version -->
				<configuration>
					<archive>
						<manifest>
							<addClasspath>true</addClasspath>
							<mainClass>
								com.weirdkid.quaqua.test.JFileChooserTestApp</mainClass> <!--
							Replace with your main class -->
							<!-- Add other custom manifest entries here -->
						</manifest>
					</archive>
				</configuration>
			</plugin>

			<!-- Plugin for generating source JAR -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<version>3.3.0</version> <!-- Use the latest version -->
				<executions>
					<execution>
						<id>attach-sources</id>
						<goals>
							<goal>jar-no-fork</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<!-- Plugin for generating Javadoc JAR -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>3.6.3</version> <!-- Use the latest version -->
				<configuration>
					<failOnError>false</failOnError> <!-- Set this to false to
					ignore Javadoc errors -->
				</configuration>
				<executions>
					<execution>
						<id>attach-javadocs</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<!-- Maven GPG Plugin for signing artifacts -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-gpg-plugin</artifactId>
				<version>3.1.0</version> <!-- Use the latest version -->
				<executions>
					<execution>
						<id>sign-artifacts</id>
						<phase>verify</phase>
						<goals>
							<goal>sign</goal>
						</goals>
						<configuration>
							<!-- Replace with your key ID -->
							<keyname>5AA4A293</keyname> 
							<!-- The passphrase is specified in the settings.xml -->
						</configuration>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>
</project>
